<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Mooshak 2.0", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">


					@if (User.IsInRole("Administrator"))
					{
						<li>@Html.ActionLink("Administrator", "Index", "Home")</li>
					}
					@if (User.IsInRole("Teacher"))
					{
						<li>@Html.ActionLink("Teacher", "Index", "Teacher")</li>
					}
					@if (User.IsInRole("Student"))
					{
						<li>@Html.ActionLink("Student", "Index", "Student")</li>
					}

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-3 col-md-2 sidebar">
				<ul class="nav nav-sidebar">

					@if (User.IsInRole("Administrator"))
					{
						<li>@Html.ActionLink("Home", "Index", "Home")</li>
						<li>@Html.ActionLink("Courses", "CreateCourse", "Admin")</li>
						<li>@Html.ActionLink("Users", "Index", "Admin")</li>
						<li>@Html.ActionLink("Roles", "ViewAllRoles", "Admin")</li>
					}
					@if (User.IsInRole("Teacher"))
					{
						<li>@Html.ActionLink("Create Assignment", "CreateAssignment", "Teacher")</li>
						<li>@Html.ActionLink("Review Assignment", "ReviewAssignment", "Teacher")</li>
						<li>@Html.ActionLink("Assignments", "Assignments", "Teacher")</li>
						<li>@Html.ActionLink("Settings", "Settings", "Teacher")</li>
					}
					@if (User.IsInRole("Student"))
					{
						<li>@Html.ActionLink("Overview", "Overview", "Student")</li>
						<li>@Html.ActionLink("Submit Solution", "SubmitSolution", "Student")</li>
						<li>@Html.ActionLink("Description", "Description", "Student")</li>
						<li>@Html.ActionLink("Settings", "Settings", "Student")</li>
					}
					
				</ul>
			</div>


			<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

				@RenderBody()

				<hr />
				<footer>
					<p>&copy; @DateTime.Now.Year - Mooshak 2.0</p>
				</footer>
			</div>
		</div>
	</div>

		@Scripts.Render("~/bundles/jquery")
		@Scripts.Render("~/bundles/bootstrap")
		@RenderSection("scripts", required: false)
</body>
</html>
