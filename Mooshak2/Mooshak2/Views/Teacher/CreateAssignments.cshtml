
@model List<Mooshak2.Models.ViewModels.CourseViewModel>

@{
    ViewBag.Title = "CreateAssignments";
}

@using (Html.BeginForm("CreateAssignments", "Teacher", FormMethod.Post))
{
    <fieldset>
        <legend>Create Assignment</legend>

        <div class="form-group">
            <label>
                Course
                <select name="CourseID" class="form-control">

                    @foreach (var item in Model)
                    {
                        <option value="@Html.DisplayFor(modelItem => item.ID)">
                            @Html.DisplayFor(modelItem => item.Name)
                        </option>
                    }

                </select>
            </label>
        </div>

        <div class="form-group">
            <label>
                Title
                <input type="text" class="form-control" id="Title" name="Title">
            </label>
        </div>

        <div class="form-group">
            <label>
                Open
                <input type="datetime-local" class="form-control" id="Open" name="StartDate">
            </label>
        </div>

        <div class="form-group">
            <label>
                Close
                <input type="datetime-local" class="form-control" id="DueDate" name="DueDate">
            </label>
        </div>

        <div class="form-group">
            <label>
                Language
                <select name="Languages" class="form-control">
                    <option value="Cpp">C++</option>
                </select>
            </label>
        </div>

        <div class="form-group">
            <label>
                Group size
                <select name="GroupSize" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
            </label>
        </div>

        <div>
            <label>
                Description
                <input type="file" name="description" />
            </label>
        </div>

        <div class="subassignment">
            <h3>Sub-Assignment 1</h3>

            <div class="form-group">
                <label>
                    Sub-Assignment 1 title
                    <input type="text" class="form-control" id="MilestoneTitle1" name="MilestoneTitle1">
                </label>
            </div>

            <div class="form-group">
                <label>
                    Submission limit
                    <select name="SubmissionLimit1" class="form-control" id="SubmissionLimit1">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                    </select>
                </label>
            </div>

            <div class="form-group input-pairs">
                <label>
                    Input 1
                    <input type="text" class="form-control" id="MileStone1_Input1" name="MileStone1_Input1">
                </label>
                <label>
                    Output 1
                    <input type="text" class="form-control" id="MileStone1_Output1" name="MileStone1_Output1">
                </label>
            </div>

            <input type="button" value="+ Add input/output" class="btn btn-info addinpoutp">

            <br />
        </div>

        <input type="button" class="btn btn-info addsubassignment" value="Add another Sub-Assignment">
        <input type="submit" class="btn btn-info" value="Create Assignment">

    </fieldset>
}

<br />


