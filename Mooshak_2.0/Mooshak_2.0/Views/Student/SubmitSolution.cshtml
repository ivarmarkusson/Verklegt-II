
@{
    ViewBag.Title = "SubmitSolution";
}

@using (Html.BeginForm("CreateUser", "Admin", FormMethod.Post))
{
	<fieldset>
		<legend>Submit Solution</legend>
		<div class="form-group">
			<label>
				Course
				<select class="form-control">
					<option>Gagnaskipan</option>
					<option>Forritun</option>
					<option>Verklegt</option>
				</select>
			</label>
		</div>

		<div class="form-group">
			<label>
				Assignment<br />
				<select class="form-control">
					<option>Lab 1</option>
					<option>Lab 2</option>
					<option>Lab 3</option>
				</select>
			</label>
		</div>

		<div class="form-group">
			<label>
				Milestone<br />
				<select class="form-control">
					<option>TicTacToe</option>
					<option>ArrayList</option>
					<option>HashMap</option>
				</select>
			</label>
		</div>

		<div class="form-group">
			<label for="solutionInputFile">Attachment</label>
			<input type="file" id="solutionInputFile">
		</div>

		<div class="form-group">
			<button type="submit" class="btn btn-default">Submit</button>
		</div>
</fieldset>
}