@{
	ViewBag.Title = "ReviewAssignment";
}

@using (Html.BeginForm("ReviewAssignment", "Teacher", FormMethod.Get))
{
<fieldset>
    <legend>Review Assignment</legend>

    <div class="form-group">
        <select>
            <!--Örugglega einhver foreach lykkja sem á að koma hér-->
            <option>Assignment 1</option>
            <option>Assignment 2</option>
            <option>Assignment 3</option>
        </select>
    </div>

    <div class="form-group">
        <input type="search" name="searchInput" placeholder="Search...">
    </div>
</fieldset>
}

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <td>Status</td>
            <td>Username</td>
            <td>Result</td>
            <td>Number of Submissions</td>
            <td>Time</td>
            <td>Milestone</td>
            <td>File</td>
        </thead>
        <tbody>
            <!--Foreach stuff-->
            <tr>
                <td>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="blankCheckbox" value="option1" aria-label="...">
                        </label>
                    </div>
                </td>
                <td>Gulli</td>
                <td>Accepted</td>
                <td>1</td>
                <td>12:59</td>
                <td>A</td>
                <td>
                    <a href="~/Content/Pictures/ExampleOfaFile.png" download>
                        <img border="0" src="~/Content/Pictures/ExampleOfaFile.png" alt="file" width="15" height="20">
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
